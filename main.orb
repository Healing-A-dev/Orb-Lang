@format "std.io";
@including:{
    Lua -> Lua;
}

def Email:{
    func new(email):{
        self.name = email:match(".+@"):gsub("@"):titleize();
        self.company = email:match("@%w+"):gsub("@"):capitalize();
        self.company_domain = email:match("@.+"):match("%..+");
    }
    func greet():{
        putln "Welcome "/{self.name}/" to "/{self.company}{self.comapny_domain};
    }
}

static func test1():{
    set email = @Email.new("sara@alphabet.com");
    email:greet();
}

test1();