mod name([], &m_args) {
	@fmt "std.io"

	args := &m_args
	
	Customer := [
		Firstname := "Robert",
		Lastname := "Monsterous",
		Occupations := [
			Job := "Office Job",
			Hobby := "Reading"
		]
	]

	func displayData {
		puts("Customer: " << Customer.Firstname << " " << Customer.Lastname << "\n")
		puts("\nOccupations: \n\tJob: " << Customer{"Occupations"}.Job << "\n\tHobby: " << Customer{"Occupations"}.Hobby << "\n")
	}

	func updateData(data_to_update) {
		if (Customer{data_to_update} == null) {
			panic("Customer attribute <" << data_to_update << "> does not exist!\n")
		}
		new_value := io.read("Enter new value: ","*a")
		Customer{data_to_update} = new_value
	}

	global func DataBoard {
		while (true) {
			os.exec('clear')
			puts("Current Residence: [" << args.concat(", ") << "]\n\n")
			puts("1. Check new customer data\n2. Update customer data\n3. Exit\n\n")
			option := io.read("Please select a number option: ", "*n")
			if (option == 1) {
				displayData()
			} elseif (option == 2) {
				updateData(io.read("Insert customer attribute to update: "))
			} else {
				puts("Goodbye! :(\n")
				os.exit()
			}
		}
	}
}

@name("Steph", "Curtis", "Bobert", "Lenar")::DataBoard()

@name::DataBoard() <> ["Stepth", "Curtis", "Bobert"]

@name("Steph", "Curtis", "Bobert", "Lenar") {
	::DataBoard()
}
